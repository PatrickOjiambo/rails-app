<div class="company-profile">
  <div class="company-header">
    <div class="container">
      <div class="company-info">
        <% if @company.logo_url %>
          <img src="<%= @company.logo_url %>" alt="<%= @company.name %> logo" class="company-logo">
        <% end %>
        
        <div class="company-details">
          <h1><%= @company.name %></h1>
          <p class="company-meta">
            <% if @company.headquarters %>
              <span><%= @company.headquarters %></span>
            <% end %>
            <% if @company.size_category %>
              <span><%= @company.size_category.humanize %> company</span>  
            <% end %>
            <% if @company.industry %>
              <span><%= @company.industry %></span>
            <% end %>
          </p>
          
          <% if @company.description %>
            <p class="company-description"><%= @company.description %></p>
          <% end %>
        </div>
      </div>
      
      <div class="job-stats">
        <div class="stat">
          <span class="stat-number"><%= @job_stats[:total_jobs] %></span>
          <span class="stat-label">Open Positions</span>
        </div>
        <div class="stat">
          <span class="stat-number"><%= @job_stats[:remote_jobs] %></span>
          <span class="stat-label">Remote Jobs</span>
        </div>
        <div class="stat">
          <span class="stat-number"><%= @job_stats[:recent_jobs] %></span>
          <span class="stat-label">Recent Posts</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class="jobs-section">
      <div class="section-header">
        <h2>Open Positions</h2>
        <%= link_to 'Create Alert for this Company', 
                   new_alert_path(company: @company.slug), 
                   class: 'btn btn-outline' %>
      </div>
      
      <div class="jobs-list">
        <% @jobs.each do |job| %>
          <%= render 'shared/job_card', job: job %>
        <% end %>
      </div>
      
      <%= paginate @jobs %>
    </div>
  </div>
</div>
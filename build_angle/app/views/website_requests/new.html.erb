<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-3xl font-bold text-gray-800 mb-4">Build Your AI-Powered Website</h1>
  <p class="text-lg text-gray-600 mb-8">Answer a few questions and our AI will generate a complete website for you.</p>

  <%= form_with(model: @website_request, local: true, class: "space-y-6") do |form| %>
    <% if @website_request.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-600 p-4 rounded-lg border border-red-200">
        <h2 class="font-bold text-lg mb-2"><%= pluralize(@website_request.errors.count, "error") %> prohibited this from being saved:</h2>
        <ul class="list-disc pl-5 space-y-1">
          <% @website_request.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :email, 'Your Email Address', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="field">
      <%= form.label :business_type, 'What type of business is this?', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :business_type, ['Restaurant', 'Consulting Agency', 'Portfolio'], {}, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="field">
      <%= form.label :design_preferences, 'Choose a design style', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :design_preferences, ['Modern', 'Minimalist', 'Classic'], {}, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="field">
      <%= form.label :goals, 'What are the main goals of your website?', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :goals, placeholder: 'e.g., attract new clients, sell products, showcase my work...', class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 min-h-[100px]" %>
    </div>

    <div class="actions">
      <%= form.submit "Generate My Website!", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-md transition duration-200 cursor-pointer" %>
    </div>
  <% end %>
</div>